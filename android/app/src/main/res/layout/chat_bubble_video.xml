<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal"
		app:layout_constraintWidth_max="wrap"
		app:layout_constraintWidth_percent="0.75"
		app:layout_constraintTop_toTopOf="parent">
		<!-- Selection checkbox for multi-select mode -->
		<CheckBox
			android:id="@+id/selection_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:layout_gravity="center_vertical"
			android:visibility="gone"
			style="@style/Widget.Material3.CompoundButton.CheckBox" />
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="6dp"
			android:visibility="gone"
			app:cardElevation="0dp"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<!-- Selection overlay -->
				<View
					android:id="@+id/selection_overlay"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="?attr/colorOnSurfaceContainer"
					android:alpha="0.1"
					android:visibility="gone" />
				<LinearLayout
					android:id="@+id/messageBG"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="0dp"
					android:layout_marginRight="0dp"
					android:layout_marginBottom="2dp"
					android:paddingLeft="4dp"
					android:paddingTop="4dp"
					android:paddingRight="4dp"
					android:paddingBottom="8dp"
					android:background="@android:color/transparent"
					android:clickable="false"
					android:focusable="false"
					android:orientation="vertical">
				<!-- Username for group chats -->
				<TextView
					android:id="@+id/senderUsername"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp"
					android:layout_marginLeft="8dp"
					android:textSize="12sp"
					android:textColor="?attr/colorOnSurface"
					android:textStyle="bold"
					android:visibility="gone"
					android:singleLine="true"
					android:ellipsize="end"
					android:maxWidth="200dp" />
				<!-- Forwarded indicator -->
				<LinearLayout
					android:id="@+id/forwardedIndicator"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_marginBottom="4dp"
					android:layout_marginLeft="8dp"
					android:visibility="gone">
					<ImageView
						android:layout_width="14dp"
						android:layout_height="14dp"
						android:src="@drawable/ic_forward"
						android:layout_marginEnd="4dp"
						app:tint="?attr/colorOnSurfaceVariant" />
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Forwarded"
						android:textSize="11sp"
						android:textStyle="italic"
						android:textColor="?attr/colorOnSurfaceVariant" />
				</LinearLayout>
				<!-- Deleted message placeholder -->
				<LinearLayout
					android:id="@+id/deletedMessagePlaceholder"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone"
					android:padding="12dp"
					android:background="?attr/colorSurfaceVariant">
					<TextView
						android:id="@+id/deletedMessageText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="This message was deleted"
						android:textSize="14sp"
						android:textStyle="italic"
						android:textColor="?attr/colorOnSurfaceVariant" />
				</LinearLayout>
				<!-- Message content container (hidden when deleted) -->
				<LinearLayout
					android:id="@+id/messageContentContainer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/videoContainerCard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:cardElevation="0dp"
					app:cardCornerRadius="18dp">
					<RelativeLayout
						android:id="@+id/relativelayout12"
						android:layout_width="250dp"
						android:layout_height="250dp">
						<ImageView
							android:id="@+id/videoThumbnail"
							android:focusable="false"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:src="@drawable/avatar"
							android:scaleType="centerCrop" />
						<LinearLayout
							android:id="@+id/linear9"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center_horizontal|center_vertical">
							<ImageView
								android:id="@+id/playButton"
								android:focusable="false"
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:padding="12dp"
								android:background="@drawable/circular_background_black_alpha"
								android:scaleType="center"
								android:src="@android:drawable/ic_media_play"
								app:tint="@android:color/white" />
						</LinearLayout>
						<!-- Duration overlay -->
						<TextView
							android:id="@+id/videoDuration"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentBottom="true"
							android:layout_alignParentEnd="true"
							android:layout_margin="8dp"
							android:background="@drawable/circular_background_black_alpha"
							android:paddingStart="8dp"
							android:paddingEnd="8dp"
							android:paddingTop="4dp"
							android:paddingBottom="4dp"
							android:textColor="@android:color/white"
							android:textSize="12sp"
							android:textStyle="bold"
							android:visibility="gone"
							android:text="0:00" />
						<!-- Upload progress overlay -->
						<LinearLayout
							android:id="@+id/uploadProgressOverlay"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="vertical"
							android:gravity="center"
							android:background="#80000000"
							android:visibility="gone"
							android:padding="16dp">
							<ProgressBar
								android:id="@+id/uploadProgressBar"
								style="?android:attr/progressBarStyleHorizontal"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:max="100"
								android:progress="0"
								android:progressTint="@android:color/white" />
							<TextView
								android:id="@+id/uploadProgressText"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="8dp"
								android:textColor="@android:color/white"
								android:textSize="14sp"
								android:textStyle="bold"
								android:text="Uploading... 0%" />
							<TextView
								android:id="@+id/uploadEstimatedTime"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="4dp"
								android:textColor="@android:color/white"
								android:textSize="12sp"
								android:visibility="gone"
								android:text="Estimated: 5s" />
							<LinearLayout
								android:id="@+id/uploadErrorLayout"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:gravity="center"
								android:visibility="gone"
								android:layout_marginTop="8dp">
								<ImageView
									android:layout_width="24dp"
									android:layout_height="24dp"
									android:src="@android:drawable/ic_dialog_alert"
									android:tint="@android:color/holo_red_light"
									android:layout_marginEnd="8dp" />
								<TextView
									android:id="@+id/uploadErrorText"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textColor="@android:color/holo_red_light"
									android:textSize="14sp"
									android:text="Upload failed" />
							</LinearLayout>
							<com.google.android.material.button.MaterialButton
								android:id="@+id/retryButton"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="8dp"
								android:text="Retry"
								android:visibility="gone"
								style="@style/Widget.Material3.Button.TextButton" />
							<ImageView
								android:id="@+id/uploadSuccessIcon"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:src="@android:drawable/ic_menu_upload_you_tube"
								android:tint="@android:color/holo_green_light"
								android:visibility="gone" />
						</LinearLayout>
					</RelativeLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/mRepliedMessageLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:visibility="gone"
					app:cardElevation="0dp"
					app:cardCornerRadius="6dp">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutLeftBar"
							android:layout_width="4dp"
							android:layout_height="match_parent"
							android:layout_marginRight="8dp"
							android:background="#2979FF"
							android:orientation="vertical" />
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutRightBody"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<TextView
								android:id="@+id/mRepliedMessageLayoutUsername"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/ph_username"
								android:textSize="12sp"
								android:textColor="#445E91"
								android:singleLine="true" />
							<!-- CRITICAL FIX: Add ImageView for reply image previews -->
							<ImageView
								android:id="@+id/mRepliedMessageLayoutImage"
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:scaleType="centerCrop"
								android:background="@drawable/ph_imgbluredsqure"
								android:visibility="gone" />
							<TextView
								android:id="@+id/mRepliedMessageLayoutMessage"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingRight="4dp"
								android:text="@string/ph_replied_message"
								android:textSize="16sp"
								android:autoLink="all"
								android:maxLines="3"
								android:ellipsize="end"
								android:textColorLink="#FF0000" />
						</LinearLayout>
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.synapse.social.studioasinc.animations.ShimmerFrameLayout
					android:id="@+id/shimmer_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:shimmer_color="#9A9A9A">
					<TextView
						android:id="@+id/message_text"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:textSize="16sp"
						android:autoLink="all"
						android:textColorLink="#FFFF00" />
				</com.synapse.social.studioasinc.animations.ShimmerFrameLayout>
				</LinearLayout>
				<!-- End of messageContentContainer -->
				<!-- Metadata moved inside bubble -->
				<LinearLayout
					android:id="@+id/my_message_info"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:layout_marginRight="8dp"
					android:gravity="right|center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="end">
					<TextView
						android:id="@+id/pendingIndicator"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Pending"
						android:textSize="10sp"
						android:textStyle="italic"
						android:textColor="?attr/colorSecondary"
						android:layout_marginRight="4dp"
						android:visibility="gone" />
					<TextView
						android:id="@+id/editedIndicator"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="(edited)"
						android:textSize="10sp"
						android:textStyle="italic"
						android:textColor="?attr/colorOnSurfaceVariant"
						android:layout_marginRight="4dp"
						android:visibility="gone"
						android:clickable="true"
						android:focusable="true" />
					<TextView
						android:id="@+id/date"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="4dp"
						android:text="00:00"
						android:textSize="11sp"
						android:textColor="#000000" />
					<ImageView
						android:id="@+id/message_state"
						android:focusable="false"
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:src="@drawable/ic_check_black"
						android:scaleType="centerInside" />
				</LinearLayout>
			</LinearLayout>
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
