<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <!-- Comment Bubble -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Username" />

                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_verified"
                        android:visibility="gone" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="6dp"
                        android:text="@string/author_badge"
                        android:textSize="10sp"
                        app:chipMinHeight="20dp"
                        app:chipCornerRadius="4dp"
                        app:chipBackgroundColor="?attr/colorPrimaryContainer"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:maxWidth="280dp"
                    tools:text="This is a comment that can span multiple lines and contain various content." />

                <!-- Comment Media -->
                <ImageView
                    android:id="@+id/ivMedia"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Reaction Badge on Comment -->
        <LinearLayout
            android:id="@+id/reactionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/reaction_summary_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:elevation="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvReactionEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="ðŸ‘" />

            <TextView
                android:id="@+id/tvReactionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="5" />

        </LinearLayout>

        <!-- Actions Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="2h" />

            <TextView
                android:id="@+id/tvLikeAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/reaction_like"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvReplyAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/reply"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvEdited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/edited_indicator"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

        </LinearLayout>

        <!-- View Replies -->
        <LinearLayout
            android:id="@+id/viewRepliesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <View
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:background="?attr/colorOutlineVariant" />

            <TextView
                android:id="@+id/tvViewReplies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:padding="4dp"
                tools:text="View 3 replies" />

        </LinearLayout>

        <!-- Replies Container -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReplies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
