<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/connection_status_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_errorContainer"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/connection_progress"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:indeterminateTint="@color/md_theme_onErrorContainer"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/connection_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_wifi_off_24"
        android:tint="@color/md_theme_onErrorContainer"
        android:visibility="visible" />

    <TextView
        android:id="@+id/connection_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Connection lost"
        android:textColor="@color/md_theme_onErrorContainer"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connection_retry_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:minHeight="32dp"
        android:text="Retry"
        android:textColor="@color/md_theme_onErrorContainer"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>