<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Animated Background Container -->
    <FrameLayout
        android:id="@+id/layoutBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGradient1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gradient_1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivGradient2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gradient_2"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Glass Container Background -->
            <View
                android:id="@+id/viewGlassBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_glass_card"
                app:layout_constraintBottom_toBottomOf="@id/layoutSocialAuth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvWelcome"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="-32dp"
                android:layout_marginBottom="-32dp"
                android:layout_marginStart="-16dp"
                android:layout_marginEnd="-16dp" />

            <!-- Header Section -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/product_sans_bold"
                android:text="Welcome to Synapse"
                android:textColor="?attr/colorOnSurface"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sign in to continue"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

            <!-- Input Fields -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="Email"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:startIconDrawable="@drawable/ic_email_enhanced">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/product_sans"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilEmail"
                app:startIconDrawable="@drawable/ic_lock_enhanced">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/product_sans"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Strength Indicator (Initially Gone) -->
             <LinearLayout
                android:id="@+id/layoutPasswordStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilPassword">

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressPasswordStrength"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    app:trackCornerRadius="2dp" />

                <TextView
                    android:id="@+id/tvPasswordStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/product_sans"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsername"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Username"
                android:visibility="gone"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutPasswordStrength"
                app:startIconDrawable="@drawable/ic_person_enhanced">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:fontFamily="@font/product_sans"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Actions -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="Forgot Password?"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilUsername" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Sign In"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

            <TextView
                android:id="@+id/tvToggleMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Don't have an account? Sign Up"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSignIn" />

            <!-- Social Login -->
            <LinearLayout
                android:id="@+id/layoutSocialAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvToggleMode">

                <ImageButton
                    android:id="@+id/btnGoogleAuth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ripple_circular"
                    android:src="@drawable/ic_google_logo"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="Sign in with Google" />

                <ImageButton
                    android:id="@+id/btnAppleAuth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ripple_circular"
                    android:src="@drawable/ic_apple_logo"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="Sign in with Apple" />

                <ImageButton
                    android:id="@+id/btnFacebookAuth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ripple_circular"
                    android:src="@drawable/ic_facebook_logo"
                    android:contentDescription="Sign in with Facebook" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Email Verification Overlay (Full Screen) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutVerification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone"
        android:padding="24dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ivEmailVerify"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_email_animated"
            app:layout_constraintBottom_toTopOf="@+id/tvVerifyTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvVerifyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Your Email"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/product_sans_bold"
            app:layout_constraintBottom_toTopOf="@+id/tvVerifyDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEmailVerify" />

        <TextView
            android:id="@+id/tvVerifyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your inbox and click the link."
            android:layout_marginTop="8dp"
            android:fontFamily="@font/product_sans"
            app:layout_constraintBottom_toTopOf="@+id/btnResendVerify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResendVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Resend Email"
            app:layout_constraintBottom_toTopOf="@+id/btnCancelVerify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyDesc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelVerify"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Back to Sign In"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnResendVerify" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
