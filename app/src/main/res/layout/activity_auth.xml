<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/_main">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="?attr/colorSurface"
		android:scrollbars="none"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/parentLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="18dp"
			android:paddingTop="46dp"
			android:paddingRight="18dp"
			android:paddingBottom="18dp"
			android:background="@android:color/transparent"
			android:animateLayoutChanges="true">
			<com.synapse.social.studioasinc.animations.textview.TVeffects
				android:id="@+id/aiNameTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Hello, I'm Synapse AI"
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnBackground"
				android:fontFamily="@font/product_sans_bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"/>
			<com.synapse.social.studioasinc.animations.textview.TVeffects
				android:id="@+id/aiResponseTextView_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:textSize="18sp"
				android:textColor="?attr/colorOnSurface"
				android:fontFamily="@font/product_sans"
				app:layout_constraintTop_toBottomOf="@id/aiNameTextView"
				app:layout_constraintStart_toStartOf="parent"/>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/mainHiddenLayout"
				android:layout_width="0dp"
				android:layout_height="300dp"
				android:layout_marginTop="15dp"
				android:visibility="gone"
				android:animateLayoutChanges="true"
				app:layout_constraintTop_toBottomOf="@id/aiResponseTextView_1"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/nameLayout"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:background="@drawable/white_rounded_stroke"
					android:animateLayoutChanges="true"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent">

					<LinearLayout
						android:id="@+id/profileHolderLayout"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_marginRight="10dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical"
						android:visibility="gone"
						android:animateLayoutChanges="true"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent">
						<LinearLayout
							android:id="@+id/latterProfilePictureLayoutCircle"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:background="@drawable/circlelayout">
							<TextView
								android:id="@+id/nameFirstLetterTextView"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="A"
								android:textSize="20sp"
								android:textStyle="bold"
								android:textColor="?colorSurface" />
						</LinearLayout>
					</LinearLayout>

					<TextView
						android:id="@+id/userAutoResponseTextView_1"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="Nice to meet you, I'm..."
						android:textSize="16sp"
						android:textColor="?attr/colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toEndOf="@id/profileHolderLayout"
						app:layout_constraintEnd_toEndOf="parent"/>

					<EditText
						android:id="@+id/usernameEditText"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:padding="2dp"
						android:background="@android:color/transparent"
						android:gravity="center_vertical"
						android:textSize="18sp"
						android:textColor="?attr/colorOnSurface"
						android:hint="Enter your name"
						android:textColorHint="?attr/colorOnSurfaceVariant"
						android:singleLine="true"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toBottomOf="@id/userAutoResponseTextView_1"
						app:layout_constraintStart_toStartOf="@id/userAutoResponseTextView_1"
						app:layout_constraintEnd_toEndOf="@id/userAutoResponseTextView_1"/>
				</androidx.constraintlayout.widget.ConstraintLayout>

				<View
					android:id="@+id/animatorSupportLayout"
					android:layout_width="0dp"
					android:layout_height="0dp"
					app:layout_constraintTop_toBottomOf="@id/nameLayout"
					app:layout_constraintBottom_toTopOf="@id/linear2"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"/>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/linear2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent">

					<CheckBox
						android:id="@+id/confirmAgeCheckBox"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="12dp"
						android:layout_marginRight="12dp"
						android:background="@drawable/rounded_stroke"
						android:gravity="center_vertical"
						android:text="@string/age_agreement"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="?colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"/>

					<Button
						android:id="@+id/continueButton"
						android:layout_width="0dp"
						android:layout_height="60dp"
						android:layout_marginTop="15dp"
						android:padding="8dp"
						android:text="Continue"
						android:textSize="16sp"
						android:textColor="?colorSurface"
						style="@style/Widget.Material3.Button"
						android:fontFamily="@font/product_sans_bold"
						app:layout_constraintTop_toBottomOf="@id/confirmAgeCheckBox"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"/>

					<TextView
						android:id="@+id/infoTextView_1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="You can always change your name later"
						android:textSize="12sp"
						android:textColor="?attr/colorOnBackground"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toBottomOf="@id/continueButton"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/section2Layout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:animateLayoutChanges="true"
				app:layout_constraintTop_toBottomOf="@id/mainHiddenLayout"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<com.synapse.social.studioasinc.animations.textview.TVeffects
					android:id="@+id/aiResponseTextView_2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:text="Hello"
					android:textSize="16sp"
					android:textColor="?attr/colorOnSurface"
					android:fontFamily="@font/product_sans"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"/>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/linear4"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:padding="12dp"
					android:background="@drawable/white_rounded_stroke"
					android:visibility="gone"
					app:layout_constraintTop_toBottomOf="@id/aiResponseTextView_2"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent">

					<ImageView
						android:id="@+id/ic_rule_1"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/star_shine_24px"
						android:scaleType="fitCenter"
						app:layout_constraintTop_toTopOf="@id/ruleTextView1"
						app:layout_constraintBottom_toBottomOf="@id/ruleTextView1"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginEnd="8dp"/>

					<com.synapse.social.studioasinc.animations.textview.TVeffects
						android:id="@+id/ruleTextView1"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:textSize="16sp"
						android:textColor="?attr/colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toEndOf="@id/ic_rule_1"
						app:layout_constraintEnd_toEndOf="parent"/>

					<ImageView
						android:id="@+id/ic_rule_2"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_docs_48px"
						android:scaleType="fitCenter"
						app:layout_constraintTop_toTopOf="@id/ruleTextView2"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginEnd="8dp"/>

					<com.synapse.social.studioasinc.animations.textview.TVeffects
						android:id="@+id/ruleTextView2"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:layout_marginTop="10dp"
						android:text="You own the content you share, but you give Synapse permission to display and share it inside the app. Do not post anything illegal, offensive, or harmful. Spamming, impersonation, hate speech, or harassment of any kind is not allowed and may lead to account suspension."
						android:textSize="16sp"
						android:textColor="?attr/colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toBottomOf="@id/ruleTextView1"
						app:layout_constraintStart_toEndOf="@id/ic_rule_2"
						app:layout_constraintEnd_toEndOf="parent"/>

					<ImageView
						android:id="@+id/ic_rule_3"
						android:layout_width="25dp"
						android:layout_height="30dp"
						android:src="@drawable/ic_shield_lock"
						android:scaleType="fitCenter"
						app:layout_constraintTop_toTopOf="@id/ruleTextView3"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginEnd="8dp"/>

					<com.synapse.social.studioasinc.animations.textview.TVeffects
						android:id="@+id/ruleTextView3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:layout_marginTop="10dp"
						android:text="We respect your privacy. Synapse collects only the minimum data needed to run and improve the app. We do not sell your information. By continuing to use Synapse, you accept future updates to these terms. For questions, contact our support team."
						android:textSize="16sp"
						android:textColor="?attr/colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toBottomOf="@id/ruleTextView2"
						app:layout_constraintStart_toEndOf="@id/ic_rule_3"
						app:layout_constraintEnd_toEndOf="parent"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

				<Button
					android:id="@+id/finishButton"
					android:layout_width="0dp"
					android:layout_height="60dp"
					android:layout_marginTop="20dp"
					android:padding="8dp"
					android:text="I agree"
					android:textSize="16sp"
					android:textColor="?colorSurface"
					style="@style/Widget.Material3.Button"
					android:fontFamily="@font/product_sans_bold"
					app:layout_constraintTop_toBottomOf="@id/linear4"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"/>
			</androidx.constraintlayout.widget.ConstraintLayout>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/section3Layout"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:visibility="gone"
				android:animateLayoutChanges="true"
				app:layout_constraintTop_toBottomOf="@id/section2Layout"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/emailLayout"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:background="@drawable/white_rounded_stroke"
					android:animateLayoutChanges="true"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent">

					<LinearLayout
						android:id="@+id/linear19"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_marginRight="10dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical"
						android:visibility="gone"
						android:animateLayoutChanges="true"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="parent">
						<LinearLayout
							android:id="@+id/linear21"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:background="@drawable/circlelayout">
							<TextView
								android:id="@+id/textview1"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="\@"
								android:textSize="20sp"
								android:textStyle="bold"
								android:textColor="?colorSurface" />
						</LinearLayout>
					</LinearLayout>

					<TextView
						android:id="@+id/ask_for_email_tv"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="Give me your email address"
						android:textSize="16sp"
						android:textColor="?attr/colorOnSurface"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toEndOf="@id/linear19"
						app:layout_constraintEnd_toEndOf="parent"/>

					<EditText
						android:id="@+id/email_et"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="2dp"
						android:layout_marginTop="5dp"
						android:background="@android:color/transparent"
						android:gravity="center_vertical"
						android:textSize="18sp"
						android:textColor="?attr/colorOnSurface"
						android:hint="Enter your email"
						android:textColorHint="?attr/colorOnSurfaceVariant"
						android:singleLine="true"
						android:fontFamily="@font/product_sans"
						app:layout_constraintTop_toBottomOf="@id/ask_for_email_tv"
						app:layout_constraintStart_toStartOf="@id/ask_for_email_tv"
						app:layout_constraintEnd_toEndOf="@id/ask_for_email_tv"/>
				</androidx.constraintlayout.widget.ConstraintLayout>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/linear17"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="8dp"
					app:layout_constraintTop_toBottomOf="@id/emailLayout"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent">

					<androidx.constraintlayout.widget.ConstraintLayout
						android:id="@+id/passLayout"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@drawable/white_rounded_stroke"
						android:animateLayoutChanges="true"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent">

						<LinearLayout
							android:id="@+id/linear57"
							android:layout_width="wrap_content"
							android:layout_height="0dp"
							android:layout_marginRight="10dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical"
							android:visibility="gone"
							android:animateLayoutChanges="true"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintStart_toStartOf="parent">
							<LinearLayout
								android:id="@+id/linear59"
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="vertical"
								android:background="@drawable/circlelayout">
								<TextView
									android:id="@+id/textview14"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="A"
									android:textSize="20sp"
									android:textStyle="bold"
									android:textColor="?colorSurface"
									android:fontFamily="@font/product_sans" />
							</LinearLayout>
						</LinearLayout>

						<TextView
							android:id="@+id/askForPassTV"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:text="Now, your password"
							android:textSize="16sp"
							android:textColor="?attr/colorOnSurface"
							android:fontFamily="@font/product_sans"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintStart_toEndOf="@id/linear57"
							app:layout_constraintEnd_toEndOf="parent"/>

						<EditText
							android:id="@+id/pass_et"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginTop="5dp"
							android:padding="2dp"
							android:background="@android:color/transparent"
							android:gravity="center_vertical"
							android:textSize="18sp"
							android:textColor="?attr/colorOnSurface"
							android:hint="Enter your password"
							android:textColorHint="?attr/colorOnSurfaceVariant"
							android:singleLine="true"
							android:fontFamily="@font/product_sans"
							app:layout_constraintTop_toBottomOf="@id/askForPassTV"
							app:layout_constraintStart_toStartOf="@id/askForPassTV"
							app:layout_constraintEnd_toEndOf="@id/askForPassTV"/>
					</androidx.constraintlayout.widget.ConstraintLayout>

					<Button
						android:id="@+id/button1"
						android:layout_width="0dp"
						android:layout_height="60dp"
						android:layout_marginTop="15dp"
						android:padding="8dp"
						android:text="Continue"
						android:textSize="16sp"
						android:textColor="?colorSurface"
						style="@style/Widget.Material3.Button"
						android:fontFamily="@font/product_sans_bold"
						app:layout_constraintTop_toBottomOf="@id/passLayout"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintEnd_toEndOf="parent"/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
