<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="?attr/colorOnSurface"
            app:title="@string/create_post"
            app:titleTextAppearance="?attr/textAppearanceHeadlineSmall">

            <!-- Expressive Post Button with pill shape -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/postButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:enabled="false"
                android:paddingHorizontal="24dp"
                android:text="@string/post"
                android:textAllCaps="false"
                app:cornerRadius="22dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="end"
                app:iconPadding="8dp"
                app:iconSize="18dp" />

        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/uploadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:visibility="gone"
            app:trackCornerRadius="2dp"
            app:trackThickness="4dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Author Header with Expressive Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/authorAvatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:strokeColor="?attr/colorOnSurface"
                        app:strokeWidth="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/authorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Username" />

                        <!-- Expressive Privacy Chip -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/privacyChip"
                            style="@style/Widget.Material3.Chip.Suggestion.Elevated"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/public_visibility"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            app:chipCornerRadius="18dp"
                            app:chipIcon="@drawable/ic_public"
                            app:chipIconSize="18dp"
                            app:chipIconTint="?attr/colorOnSurface"
                            app:chipMinHeight="36dp"
                            app:chipStrokeWidth="0dp"
                            app:ensureMinTouchTargetSize="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Content Input Area with Expressive styling -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postContentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="top|start"
                android:hint="@string/whats_on_your_mind"
                android:inputType="textMultiLine|textCapSentences"
                android:lineSpacingExtra="4dp"
                android:minHeight="180dp"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textSize="18sp" />

            <!-- Character Counter with Expressive styling -->
            <TextView
                android:id="@+id/charCountWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="50 characters remaining"
                tools:visibility="visible" />

            <!-- Media Preview with Expressive Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mediaPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="14dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_image"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/mediaCountLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceTitleSmall"
                            android:textColor="?attr/colorOnSurface"
                            tools:text="Media (3/10)" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/removeAllMediaButton"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/remove_all"
                            android:textColor="?attr/colorError"
                            app:cornerRadius="20dp"
                            app:rippleColor="?attr/colorErrorContainer" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mediaRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Poll Preview with Expressive Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pollPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_poll"
                            app:tint="?attr/colorOnSecondaryContainer" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="@string/poll"
                            android:textAppearance="?attr/textAppearanceTitleSmall"
                            android:textColor="?attr/colorOnSecondaryContainer" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/removePollButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:backgroundTint="?attr/colorSurfaceContainerHighest"
                            app:icon="@drawable/ic_close"
                            app:iconSize="20dp"
                            app:iconTint="?attr/colorOnSurfaceVariant"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pollQuestionPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        tools:text="What's your favorite color?" />

                    <LinearLayout
                        android:id="@+id/pollOptionsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/pollDurationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        tools:text="Duration: 24 hours" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- YouTube Preview with Expressive Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/youtubePreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <WebView
                        android:id="@+id/youtubeWebView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/removeYoutubeButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="12dp"
                        app:backgroundTint="?attr/colorSurfaceContainerHighest"
                        app:icon="@drawable/ic_close"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurface"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Location Preview with Expressive Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/locationPreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorTertiaryContainer"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="?attr/colorOnTertiaryContainer" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/locationName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            tools:text="New York City" />

                        <TextView
                            android:id="@+id/locationAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:visibility="gone"
                            tools:text="123 Main St" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/removeLocationButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:backgroundTint="?attr/colorSurfaceContainerHighest"
                        app:icon="@drawable/ic_close"
                        app:iconSize="20dp"
                        app:iconTint="?attr/colorOnSurfaceVariant"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Expressive Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomActionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <!-- Expressive Icon Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addMediaButton"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:contentDescription="@string/add_media"
                app:backgroundTint="?attr/colorOnSurfaceContainer"
                app:icon="@drawable/ic_image"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnPrimaryContainer"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPollButton"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/add_poll"
                app:backgroundTint="?attr/colorSecondaryContainer"
                app:icon="@drawable/ic_poll"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSecondaryContainer"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addYoutubeButton"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/add_youtube"
                app:backgroundTint="?attr/colorErrorContainer"
                app:icon="@drawable/ic_youtube"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnErrorContainer"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addLocationButton"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/add_location"
                app:backgroundTint="?attr/colorTertiaryContainer"
                app:icon="@drawable/ic_location"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnTertiaryContainer"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:contentDescription="@string/post_settings"
                app:icon="@drawable/ic_settings_black"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
