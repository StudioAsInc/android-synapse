<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="React to this post"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/reactionsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="8dp">

            <FrameLayout
                android:id="@+id/reactionLike"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_like"
                    android:contentDescription="Like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Like"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/reactionLove"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_love"
                    android:contentDescription="Love" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Love"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/reactionHaha"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_haha"
                    android:contentDescription="Haha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Haha"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/reactionWow"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_wow"
                    android:contentDescription="Wow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Wow"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/reactionSad"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_sad"
                    android:contentDescription="Sad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Sad"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/reactionAngry"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reaction_angry"
                    android:contentDescription="Angry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Angry"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </FrameLayout>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
