<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Settings"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/hideViewsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide view count"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/hideLikesSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide like count"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/hideCommentsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide comment count"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/disableCommentsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable comments" />

</LinearLayout>
