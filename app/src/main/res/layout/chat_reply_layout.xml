<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/mMessageReplyLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:visibility="gone"
	android:elevation="4dp">
	<LinearLayout
		android:id="@+id/mMessageReplyLayoutBody"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:paddingStart="16dp"
		android:paddingEnd="16dp"
		android:background="@color/md_theme_surfaceContainerLow"
		android:orientation="horizontal">
		<!-- Left border indicator -->
		<View
			android:id="@+id/mMessageReplyLayoutLeftBorder"
			android:layout_width="4dp"
			android:layout_height="match_parent"
			android:layout_marginEnd="12dp"
			android:background="?attr/colorPrimary" />
		<LinearLayout
			android:id="@+id/mMessageReplyLayoutBodyRight"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/mMessageReplyLayoutBodyRightUsername"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ph_username"
				android:textSize="13sp"
				android:textColor="?attr/colorPrimary"
				android:textStyle="bold"
				android:singleLine="true"
				android:ellipsize="end" />
			<TextView
				android:id="@+id/mMessageReplyLayoutBodyRightMessage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:text="@string/ph_message"
				android:textSize="14sp"
				android:textColor="@color/md_theme_onSurfaceVariant"
				android:maxLines="2"
				android:ellipsize="end" />
			<ImageView
				android:id="@+id/mMessageReplyLayoutMediaPreview"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_marginTop="8dp"
				android:scaleType="centerCrop"
				android:visibility="gone"
				android:background="@drawable/bg_profile_image_round" />
		</LinearLayout>
		<ImageView
			android:id="@+id/mMessageReplyLayoutBodyCancel"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginStart="12dp"
			android:layout_gravity="center_vertical"
			android:padding="6dp"
			android:src="@drawable/ic_close_48px"
			android:scaleType="centerInside"
			android:background="?attr/selectableItemBackgroundBorderless"
			app:tint="@color/md_theme_onSurfaceVariant" />
	</LinearLayout>
</LinearLayout>
