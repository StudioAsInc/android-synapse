<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mMessageReplyLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:visibility="gone">
	<LinearLayout
		android:id="@+id/mMessageReplyLayoutBody"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:background="@color/md_theme_surfaceContainerLow"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/mMessageReplyLayoutBodyIc"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_marginRight="@dimen/spacing_small"
			android:padding="10dp"
			android:src="@drawable/ic_reply"
			android:scaleType="centerCrop" />
		<LinearLayout
			android:id="@+id/mMessageReplyLayoutBodyRight"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:layout_weight="1">
			<TextView
				android:id="@+id/mMessageReplyLayoutBodyRightUsername"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ph_username"
				android:textSize="@dimen/text_size_normal"
				android:textColor="@color/reply_text_color"
				android:singleLine="true" />
			<TextView
				android:id="@+id/mMessageReplyLayoutBodyRightMessage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ph_message"
				android:textSize="@dimen/text_size_normal"
				android:textStyle="bold"
				android:textColor="@color/md_theme_onSurfaceVariant"
				android:singleLine="true" />
		</LinearLayout>
		<ImageView
			android:id="@+id/mMessageReplyLayoutBodyCancel"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:layout_marginLeft="@dimen/spacing_normal"
			android:padding="10dp"
			android:src="@drawable/ic_close_48px"
			android:scaleType="centerCrop" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/mMessageReplyLayoutSpace"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:padding="@dimen/spacing_normal"
		android:background="@color/md_theme_surfaceContainerLow"
		android:orientation="horizontal" />
</LinearLayout>
