<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_normal"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="@dimen/spacing_normal"
        app:cardElevation="0dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:id="@+id/typing_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_account_circle_48px"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_incoming_message_single"
        android:padding="@dimen/spacing_normal"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/typing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User is typing..."
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/md_theme_onSecondaryContainer"
            android:layout_marginEnd="@dimen/spacing_small" />

        <com.synapse.social.studioasinc.widget.TypingAnimationView
            android:id="@+id/typing_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>