<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="48dp"
            android:paddingVertical="32dp">



            <!-- Logo and Title Section -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Sign In To Your Account"
                android:textColor="?attr/colorOnSurface"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo" />

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Unleash your inner sloth 4.0 right now"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="18sp"
                android:fontFamily="@font/product_sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppName" />

            <!-- Main Form Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFormContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLowest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintWidth_max="@dimen/auth_form_max_width">

                <LinearLayout
                    android:id="@+id/layoutMainForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Email Address"
                        app:boxStrokeColor="@color/mtrl_outlined_stroke_color"
                        app:hintTextColor="@color/mtrl_outlined_stroke_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_enhanced"
                            android:drawablePadding="12dp"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingVertical="18dp"
                            android:textSize="17sp"
                            android:fontFamily="@font/product_sans" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Password"
                        app:endIconMode="password_toggle"
                        app:boxStrokeColor="@color/mtrl_outlined_stroke_color"
                        app:hintTextColor="@color/mtrl_outlined_stroke_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_lock_enhanced"
                            android:drawablePadding="12dp"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingVertical="18dp"
                            android:textSize="17sp"
                            android:fontFamily="@font/product_sans" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/cbRememberMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Remember For 30 Days"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="15sp"
                        android:fontFamily="@font/product_sans" />


                    <!-- Username Input (for Sign Up) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilUsername"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Username"
                        android:visibility="gone"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="?attr/colorPrimary"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="18dp"
                        app:boxCornerRadiusTopEnd="18dp"
                        app:boxCornerRadiusBottomStart="18dp"
                        app:boxCornerRadiusBottomEnd="18dp"
                        app:hintTextColor="?attr/colorPrimary"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingVertical="18dp"
                            android:textSize="17sp"
                            android:fontFamily="@font/product_sans" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Error Message Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="?attr/colorErrorContainer"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="18dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@android:drawable/ic_dialog_alert"
                                android:tint="?attr/colorError"
                                android:layout_marginEnd="14dp" />

                            <TextView
                                android:id="@+id/tvErrorMessage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Error message"
                                android:textColor="?attr/colorOnErrorContainer"
                                android:textSize="15sp"
                                android:fontFamily="@font/product_sans" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sign In/Up Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginBottom="20dp"
                        android:text="Sign In"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/auth_button_color"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        app:iconSize="26dp"
                        app:iconPadding="10dp"
                        app:rippleColor="@color/md_theme_primaryContainer"
                        android:foreground="@drawable/ripple_button_auth"
                        android:fontFamily="@font/product_sans" />

                    <!-- Toggle Mode Text -->
                    <TextView
                        android:id="@+id/tvToggleMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/auth_min_touch_target"
                        android:layout_gravity="center"
                        android:padding="18dp"
                        android:text="Don't have an account? Sign Up"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/product_sans"
                        android:background="@drawable/ripple_rounded"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Social Authentication Section -->
            <LinearLayout
                android:id="@+id/layoutSocialAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardFormContainer"
                app:layout_constraintWidth_max="@dimen/auth_form_max_width">

                <!-- Divider with Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?attr/colorOutlineVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="@string/social_auth_divider"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:fontFamily="@font/product_sans" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="?attr/colorOutlineVariant" />
                </LinearLayout>

                <!-- Social Auth Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnFacebookAuth"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_social_button_facebook"
                        android:contentDescription="Sign in with Facebook"
                        android:foreground="@drawable/bg_social_button_ripple"
                        android:src="@drawable/ic_facebook_logo" />

                    <ImageButton
                        android:id="@+id/btnTwitterAuth"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_social_button_twitter"
                        android:contentDescription="Sign in with Twitter"
                        android:foreground="@drawable/bg_social_button_ripple"
                        android:src="@drawable/ic_twitter_logo" />

                    <ImageButton
                        android:id="@+id/btnGoogleAuth"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_social_button_google"
                        android:contentDescription="Sign in with Google"
                        android:foreground="@drawable/bg_social_button_ripple"
                        android:src="@drawable/ic_google_logo" />
                </LinearLayout>
            </LinearLayout>

            <!-- Email Verification Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutEmailVerification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLowest"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintWidth_max="@dimen/auth_form_max_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="40dp">

                    <!-- Animated Verification Icon -->
                    <ImageView
                        android:id="@+id/ivEmailIcon"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_email_animated"
                        android:contentDescription="Email verification icon" />

                    <TextView
                        android:id="@+id/tvVerificationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:text="Verify Your Email"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/product_sans" />

                    <TextView
                        android:id="@+id/tvVerificationMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="We've sent a verification link to your email. Please check your inbox and click the link to activate your account."
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp"
                        android:fontFamily="@font/product_sans" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tvVerificationEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="14dp"
                            android:text="example@email.com"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResendVerification"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:minHeight="@dimen/auth_min_touch_target"
                        android:layout_marginBottom="16dp"
                        android:text="Resend Verification Email"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="textStart"
                        android:fontFamily="@font/product_sans" />

                    <!-- Countdown Timer with Circular Progress -->
                    <FrameLayout
                        android:id="@+id/layoutResendCooldown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">
                        
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressResendCooldown"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            app:indicatorSize="56dp"
                            app:trackThickness="5dp"
                            app:indicatorColor="?attr/colorPrimary"
                            app:trackColor="?attr/colorSurfaceVariant"
                            app:trackCornerRadius="2.5dp"
                            app:indicatorDirectionCircular="counterclockwise" />
                        
                        <TextView
                            android:id="@+id/tvResendCooldown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="60"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans" />
                    </FrameLayout>
                    
                    <!-- Auto-refresh indicator -->
                    <LinearLayout
                        android:id="@+id/layoutAutoRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressAutoRefresh"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            app:indicatorSize="24dp"
                            app:trackThickness="3dp"
                            app:indicatorColor="?attr/colorPrimary"
                            app:trackColor="?attr/colorSurfaceVariant"
                            android:indeterminate="true" />
                        
                        <TextView
                            android:id="@+id/tvAutoRefresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checking verification status..."
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="13sp"
                            android:fontFamily="@font/product_sans" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBackToSignIn"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/auth_min_touch_target"
                        android:text="Back to Sign In"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="@font/product_sans" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Overlay -->
            <FrameLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#CC000000"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="18dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="48dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressBar"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginBottom="28dp"
                            app:indicatorSize="72dp"
                            app:trackThickness="7dp"
                            app:indicatorColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tvLoadingMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Please wait..."
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
